{% block content %}
    <div id="wrapper" class="bg-white" style="float: left;width: 100%;padding-bottom: 50px;">
        <ul class="list-news-2 display-ib images main" id="pnlPostList">
            <h1 class="title-18 full-width">Images</h1>
            {% include 'galleries/contentsphotos.html.twig' %}
        </ul>
        <div class="clear"></div>
        {% if loadMoreToken  %}
            <div class="text-center">
                <button id="btnLastestMore" class="btn btn-all" data-token="{{ loadMoreToken }}" data-url="{{ url_ajax_photos_list }}">Load more</button>
                <img id="imgMoreLoading" class="hidden" src="/images/loading.gif" title="Please wait while loading data" />
            </div>
        {% endif %}
    </div>
    <div class="clear"></div>
    <!-- The Modal -->
    <div id="myModal" class="modal">
        <!-- The Close Button -->
        <span class="close">&times;</span>

        <!-- Modal Content -->
        <div class="modal-content" id="modal-content"></div>

        <div class="container" style="text-align: center;vert-align: middle">
            <img id="imgMoreLoading" class="hidden" src="/images/loading.gif" title="Please wait while loading data"/>
        </div>

        <!-- Modal Caption (Image Text) -->
        <div id="caption"></div>
    </div>
    <input type="hidden" value="{{ url_ajax_photos }}" id="url_dataPopup">
    <input type="hidden" value="{{ gallery_id }}" id="gallery_id">
    <input type="hidden" value="{{ gallery_url }}" id="gallery_url">
    <input type="hidden" value="{{ gallery_title }}" id="gallery_title">
    <input type="hidden" value="{{ url_post }}" id="url_post">
{% endblock %}