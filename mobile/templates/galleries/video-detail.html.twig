{% extends 'base.html.twig' %}

{% block content %}
    <div id="wrapper" class="bg-white">
        <div class="f-video">
            <h2 class="title-18 full-width main pd-bottom-28">Videos</h2>
            {% if info != null %}
                <div id="mainPlayVideo"></div>
                <div class="info-car main" style="margin-top: 10px;">
                    <h1 style="width: 100%"><a rel="nofollow" href="" class="name-pro" id="firstTitle">{{ info['title'] }}</a></h1>
                    <div class="short-info" id="firstSapo">
                        {{ info['description'] | raw }}
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="clear"></div>
        {% if list != null %}
            <ul class="list-news-2 display-ib videos main">
                {% for key, item in list %}
                    <li class="">
                        <a class="img-sp iframetrack" rel="{{ item['url'] }}">
                            <img src="{{ item['avatar_mobile'] }}" alt="">
                            <div class="icon-play"></div>
                        </a>
                        <div class="info-car">
                            <h3><a href="{{ item['link'] }}" class="name-pro">{{ item['title'] | raw }}</a></h3>
                            <span class="date-creat"> <i class="icon-clock"></i>{{ item['created_date'] }}</span>
                            <p style="display: none;" class="sapoVideos">{{ item['description'] | raw }}</p>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
        {% if info != null %}
            <input type="hidden" value="{{ info['url'] }}" id="hddUrlVideos" />
            <input type="hidden" value="{{ info['avatar_mobile'] }}" id="avatarUrlVideos"/>
        {% endif %}
        <div class="clear"></div>
    </div>
{% endblock %}