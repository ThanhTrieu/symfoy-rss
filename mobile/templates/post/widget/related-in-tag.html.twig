{% if dataRelated|length > 0 %}
    <section class="list-new2 news2 pd-top-30" id="latestDetailPost-News">
        <div class="main">
            <h2 class="title-18 full-width" style="width: 100%;">{{ nameTag }} News & Updates</h2>
            <ul class="list-news-2">
                {% for key, item in dataRelated %}
                    <li>
                        <a title="{{ item.title }}" href="{{ item.url }}" class="img-sp">
                            <img src="{{ item.avatar }}" alt="{{ item.title }}">
                        </a>
                        <div class="info-car">
                            <h3 class="text-title-tags"><a href="{{ item.url }}" class="name-pro" title="{{ item.title }}">{{ item.title }}</a></h3>
                            <span class="date-creat"> <i class="icon-clock"></i> {{ item.s_publish_time }}</span>

                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </section>
{% endif %}